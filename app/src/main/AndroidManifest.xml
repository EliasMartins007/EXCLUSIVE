            android:screenOrientation="portrait"/>
        <activity android:name=".ConsultarActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".EditarActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Sobre"
            android:screenOrientation="portrait"/>
        <activity android:name=".ServicoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Login"
            android:screenOrientation="portrait"/>
        <activity android:name=".AgendamentoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ProdutoActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>