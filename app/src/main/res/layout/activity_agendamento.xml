<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Telas_Clientes"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layoutTopo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="#F5F7BEE2">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/app_principal"/>

            <TextView
                android:id="@+id/titulo"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="AGENDAMENTO DE HORÁRIOS"
                android:textColor="#ff0000"
                android:textSize="19dp"
                android:layout_gravity="center"/>
        </LinearLayout>





        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:background="@drawable/gradient_background_elias">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:orientation="vertical">

            <!-- android:background="@drawable/gradient_background_elias"-->


            <TextView
                android:id="@+id/Data"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="Data agendamento :"
                android:textColor="#ff0000"
                android:textSize="24sp"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/editTextDataNascimentoHorario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:inputType="textPersonName"
                android:hint ="Digite Dia do agendamento " /><!--datas agendar (calendario) -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical">
            <!--datas agendar (calendario) -->

            <TextView
                android:id="@+id/HoraHorario"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="Horário :"
                android:textColor="#ff0000"
                android:textSize="24sp"
                android:layout_gravity="center"/>

            <Spinner
                android:id="@+id/spinnerHorarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" /><!--horario disponiveis-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ClienteHorario"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="Cliente :"
                android:textColor="#ff0000"
                android:textSize="24sp"
                android:layout_gravity="center"/>

            <Spinner
                android:id="@+id/spinnerClientesHorario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" /><!--clientes cadastrados no banco-->

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@drawable/bg_main2">


            <ImageButton
                android:id="@+id/btnAgendarHorario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editQuantidade"
                android:layout_marginRight="5dip"
                android:layout_toEndOf="@+id/txtQuantidade"
                android:layout_toRightOf="@+id/txtQuantidade"

                android:src="@android:drawable/ic_input_add" /><!--confirmar e agendar horario-->


            <ImageButton
                android:id="@+id/btnAlterarHorario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dip"

                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/btnCancelarHorario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dip"

                android:src="@android:drawable/ic_menu_delete" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>

